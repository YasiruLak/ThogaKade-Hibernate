<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" prefHeight="643.0" prefWidth="780.0"
            stylesheets="@assests/style/Style..css" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="lk.ijse.pos.controller.ItemManageController">
    <children>
        <ImageView fitHeight="314.0" fitWidth="318.0" layoutX="14.0" layoutY="-107.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@assests/image/logo.png"/>
            </image>
        </ImageView>
        <TableView fx:id="tblItems" layoutX="15.0" layoutY="298.0" prefHeight="304.0" prefWidth="751.0">
            <columns>
                <TableColumn prefWidth="125.0" text="Item Code"/>
                <TableColumn prefWidth="217.0" text="Description"/>
                <TableColumn prefWidth="145.0" text="Pack Size"/>
                <TableColumn prefWidth="137.0" text="Unit Price"/>
                <TableColumn prefWidth="127.0" text="Qty On Hand"/>
            </columns>
        </TableView>
        <ImageView id="imgHome" fitHeight="45.0" fitWidth="45.0" layoutX="14.0" layoutY="14.0"
                   onMouseClicked="#navigateToBack" pickOnBounds="true" preserveRatio="true">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <image>
                <Image url="@assests/image/back_96px.png"/>
            </image>
        </ImageView>
        <Separator layoutX="296.0" layoutY="72.0" prefHeight="2.0" prefWidth="455.0"/>
        <Label alignment="CENTER" layoutX="302.0" layoutY="19.0" prefHeight="35.0" prefWidth="455.0"
               styleClass="liner-title" text="Item Manage" textFill="WHITE">
            <font>
                <Font name="Times New Roman Bold" size="24.0"/>
            </font>
        </Label>
        <JFXTextField fx:id="txtItemCode" labelFloat="true" layoutX="28.0" layoutY="172.0" prefHeight="28.0"
                      prefWidth="138.0" promptText="Item Code :"/>
        <JFXTextField fx:id="txtItemDescription" labelFloat="true" layoutX="193.0" layoutY="172.0" prefHeight="28.0"
                      prefWidth="329.0" promptText="Description :"/>
        <JFXTextField fx:id="txtItemUnitPrice" labelFloat="true" layoutX="28.0" layoutY="227.0" prefHeight="28.0"
                      prefWidth="138.0" promptText="Unit Price :"/>
        <JFXTextField fx:id="txtItemQtyOnHand" labelFloat="true" layoutX="193.0" layoutY="227.0" prefHeight="28.0"
                      prefWidth="138.0" promptText="Qty On Hand"/>
        <JFXButton fx:id="btnAddNewItem" layoutX="621.0" layoutY="88.0" onAction="#btnAddNew_OnAction" prefHeight="35.0"
                   prefWidth="122.0" style="-fx-cursor: hand;" styleClass="btnAddNew"
                   stylesheets="@assests/style/Style..css" text="+ New Item">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </JFXButton>
        <JFXComboBox fx:id="cmbItemSize" layoutX="561.0" layoutY="171.0" prefHeight="28.0" prefWidth="150.0"
                     promptText="Select Size"/>
        <JFXButton fx:id="btnSave" layoutX="564.0" layoutY="250.0" onAction="#btnSave_OnAction" prefHeight="35.0"
                   prefWidth="83.0" style="-fx-cursor: hand;" styleClass="btnSave" text="Save">
            <font>
                <Font size="14.0"/>
            </font>
        </JFXButton>
        <JFXButton id="btnDelete" fx:id="btnDelete" layoutX="660.0" layoutY="250.0" onAction="#btnDelete_OnAction"
                   prefHeight="35.0" prefWidth="83.0" style="-fx-cursor: hand;" styleClass="btnDelete" text="Delete">
            <font>
                <Font size="14.0"/>
            </font>
        </JFXButton>
    </children>
</AnchorPane>
